.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      %p.side-bar__user-name__box__name
        = current_user.name
      %ul.side-bar__user-name__box__menu
        %li.side-bar__user-name__box__menu__new-group
          = link_to new_group_path(current_user) do
            = icon('fas', 'anchor', class: 'icon')
        %li.side-bar__user-name__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'address-card', class: 'icon')
  .side-bar__group-list
    - current_user.groups.each do |group| 
      .side-bar__group-list__group
        = link_to group_messages_path(group) do
          %p.side-bar__group-list__group__name
            = group.name
          %p.side-bar__group-list__group__latest-message
            = group.show_last_message